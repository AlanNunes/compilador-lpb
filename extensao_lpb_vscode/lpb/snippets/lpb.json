{
	"Laço de repetição - até": {
		"prefix": "repita",
		"body": [
			"repita até ${1:vezes} então",
			"\t$0",
			"fimrepita"
		],
		"description": "Repete N vezes"
	},
	"Laço de repetição - n até": {
		"prefix": "repita",
		"body": [
			"repita ${1:variável} até ${2:vezes} então",
			"\t$0",
			"fimrepita"
		],
		"description": "Repete N vezes"
	},
	"Laço de repetição - condicional": {
		"prefix": "repita",
		"body": [
			"repita ${1:variável}; ${2:condição} até ${3:vezes} então",
			"\t$0",
			"fimrepita"
		],
		"description": "Repete N vezes"
	},
	"Desvio condicional Se": {
		"prefix": "se",
		"body": [
			"se ${1:condição} então",
			"\t$0",
			"fimse"
		],
		"description": "Faz desvio condicional"
	},
	"Define função": {
		"prefix": "func",
		"body": [
			"func ${1:tipo} ${2:nome}(${3:parâmetro}) então",
			"\t$0",
			"fimfunc"
		],
		"description": "Define uma função"
	},
	"Converte para Texto": {
		"prefix": "converte",
		"body": [
			"ConverteParaTexto(${1:valor})$0"
		],
		"description": "Converte um valor para texto"
	},
	"Converte para Inteiro": {
		"prefix": "converte",
		"body": [
			"ConverteParaInteiro(${1:valor})$0"
		],
		"description": "Converte um valor para inteiro"
	},
	"Converte para Flutuante": {
		"prefix": "converte",
		"body": [
			"ConverteParaFlutuante(${1:valor})$0"
		],
		"description": "Convert um valor para flutuante"
	}
}